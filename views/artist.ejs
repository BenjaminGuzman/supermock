<div class="max-w-xs max-h-96 flex flex-col px-4 py-5 bg-black">
    <div style="background-image: url(<%- artist.picture %>)" class="bg-cover bg-center rounded-full w-44 h-44 hover:scale-110 transition-transform">
        <a href="/artist/<%- artist.id %>" class="h-full w-full bg-black bg-opacity-40 text-center flex flex-col justify-center rounded-full">
            <span><%- artist.name %></span>
        </a>
    </div>
    <div class="flex flex-col">
        <%= artist.nAlbums %>, <%= artist.nFans %>
        <a href="<%- artist.link %>">Deezer</a>
        Add to cart
    </div>
</div>
