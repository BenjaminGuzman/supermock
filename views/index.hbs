<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Super mock</title>
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <h1>{{title}}</h1>

  <main>
    <!-- Register form -->
    <div>
      <h2>Register</h2>
      <form action="/register" method="POST">
        <div>
          <label for="email">Email</label>
          <input type="email" name="email" id="email" value="email@example.com">
        </div>
        <div>
          <label for="password">Password</label>
          <input type="password" name="password" id="password" value="pass">
        </div>
        <div>
          <label for="passwordConfirmation">Password confirmation</label>
          <input type="password" name="passwordConfirmation" id="passwordConfirmation" value="pass">
        </div>
        <button type="submit">Register</button>
      </form>
    </div>

    <!-- Login form -->
    <div>
      <h2>Log in</h2>
      <form action="/login" method="POST">
        <div>
          <label for="email-login">Email</label>
          <input type="email" name="email" id="email-login" value="email@example.com">
        </div>
        <div>
          <label for="password-login">Password</label>
          <input type="password" name="password" id="password-login" value="pass">
        </div>
        <button type="submit">Log in</button>
      </form>
    </div>
  </main>
  <img class="img-full" src="/img/000.png" alt="Image">
  <img class="img-full" src="/img/001.jpg" alt="Image">
  <img class="img-full" src="/img/002.jpg" alt="Image">
  <img class="img-full" src="/img/003.png" alt="Image">
</body>
</html>
